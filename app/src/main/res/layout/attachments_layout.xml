<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iconAttachments"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/sizeAttachments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleAttachments"
            app:srcCompat="@drawable/ic_document"
            app:tint="@color/green" />

        <TextView
            android:id="@+id/titleAttachments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="middle"
            android:fontFamily="@font/gilroy_bold"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="srgfserhasharharehaerhr.jpg"
            android:textColor="@color/text_title"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/downloadAttachments"
            app:layout_constraintStart_toEndOf="@+id/iconAttachments"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sizeAttachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="1634 mb"
            android:textColor="@color/text_subtitle"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/titleAttachments"
            app:layout_constraintTop_toBottomOf="@+id/titleAttachments" />

        <ImageView
            android:id="@+id/downloadAttachments"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_subtitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>