<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:padding="10dp">

    <TextView
        android:id="@+id/senderEmailInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="adgflj@gmail.com"
        android:textColor="@color/text_title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subjectInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/gilroy_bold"
        android:maxLines="3"
        android:text="how are you"
        android:textColor="@color/text_subtitle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/senderEmailInbox"
        app:layout_constraintTop_toBottomOf="@+id/senderEmailInbox" />

    <TextView
        android:id="@+id/dateInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.6"
        android:fontFamily="sans-serif-medium"
        android:text="2018-06-08 14:40:55"
        android:textColor="@color/text_subtitle"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/subjectInbox"
        app:layout_constraintTop_toBottomOf="@+id/subjectInbox" />
</androidx.constraintlayout.widget.ConstraintLayout>